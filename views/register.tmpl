{{template "base" .}}

{{define "page-title"}}
    Register
{{end}}

{{define "page-content"}}
    <h2>Choose your name!</h2>
    <form action="/register" method="POST">
        <div><label for="name">Name!</label><input type="text" id="name" name="name" required maxlength="64" size="20"></div>
        <div><input type="submit" value="Save"></div>
    </form>
{{end}}